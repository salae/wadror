<p id="notice"><%= notice %></p>
<h1>Rating Statistics</h1>

<div class="row">
  <div class="col-md-4">
    <h2>Best beers</h2>

      <%= render 'list', items: @beers %>
  
  </div>
  <div class="col-md-4">
    <h2>Best breweries</h2>

      <%= render 'list', items: @breweries %>

  </div>
  <div class="col-md-4">
    <h2>Best styles</h2>
    
      <%= render 'list', items: @styles %>

  </div>
</div>

<div class="row">
  <h2>Most active users</h2>

    <table class="table table-hover">
      <thead>
      <tr>
        <th></th>
        <th>favorite beer</th>
        <th>preferred style</th>
        <th>favorite brewery</th>
        <th>ratings</th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.username, user %></td>
            <td><%= user.favorite_beer %></td>
            <td><%= user.favorite_style %></td>
            <td><%= user.favorite_brewery %></td>
            <td><%= user.ratings.count %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

</div>

<div class="row">
  <h2>Recent ratings</h2>
    <ul>
    <% @recent_ratings.each do |item| %>
      <li>
        <%= item.beer.name %> <%= item.score %> <%= item.user.username %>
      </li>
    <% end %>
    </ul>
</div>

<div class="row">
  <p>Total of <%= Rating.count %> ratings given</p>
</div>

  


<br>

<% if current_user %>
 <%= link_to 'New Rating', new_rating_path, class:'btn btn-primary' %>
<% end %>
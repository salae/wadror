<p id="notice"><%= notice %></p>

<h2><%= @beer_club.name %></h2>


<p>
  Founded <%= @beer_club.founded %> in <%= @beer_club.city %>
</p>

<h2>Members</h2>

  <ul>
  <% @beer_club.members.each do |member| %>
    <li> 
      <%= link_to member.username, member %>
    </li>
  <% end %>
  </ul>

<% if current_user %>
  <% if not @beer_club.members.include? current_user %>
    <%= form_for(@membership) do |f| %>
      <%= f.hidden_field :beer_club_id %>
      <%= f.submit value:"join the club" %>
    <% end %>
  <% else %>
    <%= form_for(@membership, method: "delete") do |f| %>
      <%= f.hidden_field :beer_club_id %>
      <%= f.submit value:"end the membership" %>
    <% end %>  
  <% end %>

  <%= link_to 'Edit', edit_beer_club_path(@beer_club) %> <br>
  <%= link_to 'Destroy the club', @beer_club, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>